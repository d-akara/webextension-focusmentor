{
    "manifest_version": 2,

    "name": "focus-mentor",
    "description": "Improve focus through enforced feedback loop",
    "version": "1.0",
    "author": "Chad Meadows",

    "background": { // background for long term state
        "scripts": ["dist/polyfills.js","dist/background.js"]
    },

    "browser_action": {  // create a browser toolbar entry
        "default_title": "Sample Extension",
        "default_icon": "src/chevron-double-up.png",
        "default_popup": "src/BrowserToolbar.html",
        "browser_style": true
    },

    "options_ui": {
        "page": "src/PopUp.html"
    },
    
    // page actions don't seem that useful.
    // you can't hide the action.  hide/show actuall enable or disable
    // "page_action": {},

    "content_scripts": [{ // runs in context of a loaded page
        "matches": ["<all_urls>"],
        "js": ["dist/polyfills.js", "dist/page-proxy.js"],
        "run_at": "document_end"
    }],

    "commands": { // note, bindings do not show in chrome if there is already a pre-existing binding of same keys
        "start": {
            "suggested_key": {
                "default": "Ctrl+Shift+Space"
            },
            "description": "run command"
        }
    },
    
    "permissions": [
        "activeTab",
        "webNavigation"
    ]

    // allow a script to be injected into the page source
    //"web_accessible_resources": ["script.js"]

    // developer tools panel
    //"devtools_page": "",
}